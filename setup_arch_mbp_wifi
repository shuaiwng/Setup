== wifi ==
-> install iwd(iwctl), netctl, networkmanager, dhcpcd, wpa_supplicant
-> systemctl enable netctl ONLY 

== signature issue ==
arch-chroot /mnt
rm -fr /etc/pacman.d/gnupg
pacman-key --init
pacman-key --populate
pacman -S archlinux-keyring

== KDE ==
xorg plasma-meta kde-applications
systemctl enable ssdm
# Settings:
    disable Desktop Effects
    disable "File Search"
    uninstall akonadi

== SSH ==
# Login on remote-machine
    install openssh
    ssh user@ip-address with password

# Transfer folder with files via SSH
    find inet or inet6 address on the target-machine via "ip a"
    scp -r PATH_TO_LOCAL_FOLDER username@ip_address:PATH_TARGET 
